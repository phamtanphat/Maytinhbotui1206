<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewTitle"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="#f20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="May tinh bo tui"
        android:textSize="40sp"/>
    <EditText
        android:inputType="number"
        android:id="@+id/edittextNumber1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:hint="Nhap vao so thu nhat"
        android:textSize="25sp"
        android:layout_below="@id/textviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edittextNumber2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:hint="Nhap vao so thu hai"
        android:textSize="25sp"
        android:layout_below="@id/edittextNumber1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewResult"
        android:textColor="#3954ae"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:layout_below="@id/edittextNumber2"
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonCong"
        android:padding="10dp"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/textviewResult"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonTru"
        android:padding="10dp"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/textviewResult"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonNhan"
        android:padding="10dp"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/buttonCong"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonChia"
        android:padding="10dp"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/buttonTru"
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>